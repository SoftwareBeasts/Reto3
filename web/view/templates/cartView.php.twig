{% extends "base.html.twig" %}
    {#Esta vista necesita un array de productos con los productos que el
    usuario haya añadido al carrito de la compra, ademas de la cantidad
    de ese producto#}
{% block titulo %}
    Revisa tu pedido
{% endblock %}

{% block navbarContent%}
    <div>
        <a href="./index.php?controller=producto"><i class="fas fa-utensils"></i></a>
    </div>
{% endblock %}

{% block carousel %} {% endblock %}


{% block content %}
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Comprueba tu carrito</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Rellena tus datos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Finalizar</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            CARRITO
            <button data-toggle="tab" href="#profile" >Siguiente</button>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            DATOS
        </div>
        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
            TERMINAR
        </div>
    </div>
    {% if productos is defined %}
        {% set precioTmp = 0 %}
        {% set precioTotal = 0 %}
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Producto</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Precio</th>
                <th scope="col">Subtotal</th>
                <th scope="col">Acciones</th>
            </tr>
            </thead>
            <tbody>
                <form action="./index.php?controller=pedido&action=realizarPedido">
                    {% for clave, producto in productos %}
                        <tr>
                            {% set precioTmp = productosCuantity[clave] * producto.precio %}
                            {% set precioTotal = precioTotal + precioTmp %}
                            <th scope="row">{{ producto.nombre }}</th>
                            <td><input valorId="{{ producto.idproducto }}" class="form-control cuantity" type="number" min="{{ producto.pedidoMin }}" name="cantidad{{ producto.nombre }}" value="{{ productosCuantity[clave] }}"></td>
                            <td class="precioUnitario">{{ producto.precio }}€</td>
                            <td class="precioSubtotal">{{ precioTmp }}€</td>
                            <td><button type="button" class="btn btn-danger eliminar" value="{{ producto.idproducto }}">Eliminar</button> </td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <th scope="row">Precio Total:</th>
                        <td></td>
                        <td></td>
                        <td id="precioTotal">{{ precioTotal }}€</td>
                        <td></td>
                    </tr>
                    <tr rowspan="3">
                        <th colspan="4">
                            <div class="col-md-7 offset-md-2">
                                <form method="post" action="./index.html?controller=pedido&action=">
                                    <div class="form-group row">
                                        <label for="nombre" class="col-sm-3 col-form-label">Nombre</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="nombre" name="nombre">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="fecha" class="col-sm-3 col-form-label">Fecha de recogida</label>
                                        <div class="col-sm-9">
                                            <input type="date" class="form-control" name="fecha" id="fecha">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="email" class="col-sm-3 col-form-label">Email</label>
                                        <div class="col-sm-9">
                                            <input type="email" class="form-control" id="email">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="telefono" class="col-sm-3 col-form-label">Teléfono</label>
                                        <div class="col-sm-9">
                                            <input type="number" class="form-control" id="telefono">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="textarea" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input type="submit" value="Terminar pedido" class="btn btn-primary">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </th>
                    </tr>
                </form>
            </tbody>
        </table>
    {% else %}
        <div class="offset-md-3 col-md-5 text-center">
            <h6>No se han añadido productos a tu carrito. Añade productos <a href="../index.php">aquí</a></h6>
        </div>
    {% endif %}
{% endblock %}

{% block script %}
    <script src="./view/js/cart.js" rel="script" type="text/javascript"></script>
{% endblock %}